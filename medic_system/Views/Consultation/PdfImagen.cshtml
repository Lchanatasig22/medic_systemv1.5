@model Consultum
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PdfImagen</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .container {
            width: 100%;
            height: 100%;
            margin: 0 auto;
            background-color: #fff;
            padding: 10px;
            box-sizing: border-box;
            position: relative;
        }

        .header {
            text-align: left;
            margin-bottom: 10px;
            font-size: 12px;
        }

            .header p {
                margin: 2px 0;
            }

        .content {
            width: 100%;
            display: table;
        }

        .left,
        .right {
            display: table-cell;
            vertical-align: top;
            width: 50%;
            padding: 10px;
        }

        .info-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 10px;
            font-size: 9px;
        }

            .info-table th,
            .info-table td {
                border: none;
                padding: 2px;
                text-align: left;
                font-size: 11px;
            }

            .info-table th {
                font-weight: bold;
            }

            .info-table td {
                font-weight: normal;
            }

        .section-title {
            font-weight: bold;
            margin: 10px 0;
            font-size: 11px;
        }

        .prescription-list,
        .recommendations-list {
            margin: 0;
            padding: 0;
            list-style-type: none;
            font-size: 11px;
        }

            .prescription-list li,
            .recommendations-list li {
                font-size: 11px;
            }

        .dispensada-table {
            border: 1px solid #000000;
            font-size: 8px;
            width: 40%;
            margin-top: 42%;
            margin-left: 220px;
            padding: 2%;
        }

        .address {
            font-size: 12px;
            margin-top: 20px;
        }

        .footer {
            position: absolute;
            bottom: 10px;
            left: 10px;
            right: 10px;
            font-size: 10px;
        }

        .vertical-line {
            width: 1px;
            background-color: #000;
            position: absolute;
            top: 0;
            bottom: 0;
            left: 50%;
            margin-left: -1px;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="content">
            <div class="left">
                <div class="header">
                    <p>Dr(a): @Model.MedicoConsultaDNavigation.NombresUsuario @Model.MedicoConsultaDNavigation.ApellidosUsuario</p>
                    <p>Especialista en: @Model.MedicoConsultaDNavigation.Especialidad.NombreEspecialidad</p>
                    <p>e-mail: @Model.MedicoConsultaDNavigation.EmailUsuario</p>
                    <p>Teléfonos: @Model.MedicoConsultaDNavigation.TelefonoUsuario</p>
                </div>
                <hr />
                <table class="info-table">
                    <tr>
                        <th>Fecha:</th>
                        <td>@Model.FechacreacionConsulta</td>
                        <th>Receta No.:</th>
                        <td>@Model.SecuencialConsulta</td>
                    </tr>
                    <tr>
                        <th>Apellidos:</th>
                        <td>@Model.PacienteConsultaPNavigation.PrimerapellidoPacientes </td>
                        <th>CC:</th>
                        <td>@Model.PacienteConsultaPNavigation.CiPacientes</td>
                    </tr>
                    <tr>
                        <th>Nombres:</th>
                        <td>@Model.PacienteConsultaPNavigation.PrimernombrePacientes</td>
                    </tr>
                    <tr>
                        <th>Edad:</th>
                        <td>@Model.PacienteConsultaPNavigation.EdadPacientes</td>
                    </tr>

                    <tr>
                        <th>Diagnóstico:</th>
                        <td>@Model.ConsultaDiagnostico.Diagnostico.NombreDiagnostico</td>
                    </tr>
                </table>
                <p class="section-title">ESTUDIO:</p>
                <ul class="prescription-list">
                    @if (Model.ConsultaImagen != null)
                    {
                        <p style="font-size: 11px">
                            @Model.ConsultaImagen.Imagen.NombreImagen
                            @Model.ConsultaImagen.ObservacionImagen
                            @Model.ConsultaImagen.CantidadImagen
                        </p>
                    }
                    else
                    {
                        <p style="font-size: 11px">No hay información disponible.</p>
                    }
                </ul>

                <div style="padding:50px"></div>                <hr />
                <div class="address">
                    Dirección: @Model.MedicoConsultaDNavigation.Establecimiento.DireccionEstablecimiento
                </div>
            </div>
            <div class="vertical-line"></div>

            <div class="right">
                <div class="header">
                    <p>Dr(a): @Model.MedicoConsultaDNavigation.NombresUsuario @Model.MedicoConsultaDNavigation.ApellidosUsuario</p>
                    <p>Especialista en: @Model.MedicoConsultaDNavigation.Especialidad.NombreEspecialidad</p>
                    <p>e-mail: @Model.MedicoConsultaDNavigation.EmailUsuario</p>
                    <p>Teléfonos: @Model.MedicoConsultaDNavigation.TelefonoUsuario</p>
                </div>
                <hr />
                <table class="info-table">
                    <tr>
                        <th>Fecha:</th>
                        <td>@Model.FechacreacionConsulta</td>
                        <th>Receta No.:</th>
                        <td>@Model.SecuencialConsulta</td>
                    </tr>
                    <tr>
                        <th>Apellidos:</th>
                        <td>@Model.PacienteConsultaPNavigation.PrimerapellidoPacientes </td>
                        <th>CC:</th>
                        <td>@Model.PacienteConsultaPNavigation.CiPacientes</td>
                    </tr>
                    <tr>
                        <th>Nombres:</th>
                        <td>@Model.PacienteConsultaPNavigation.PrimernombrePacientes</td>
                    </tr>
                    <tr>
                        <th>Edad:</th>
                        <td>@Model.PacienteConsultaPNavigation.EdadPacientes</td>
                    </tr>

                </table>
                <p class="section-title">OBSERVACIONES:</p>
                @if (Model.ConsultaImagen != null)
                {
                    <p style="font-size: 11px">
                        @Model.ConsultaImagen.Imagen.NombreImagen
                        @Model.ConsultaImagen.ObservacionImagen
                        @Model.ConsultaImagen.CantidadImagen
                    </p>
                }
                else
                {
                    <p style="font-size: 11px">No hay información disponible.</p>
                }                <br />


                <div style="padding:50px"></div>

                <hr />
                <div class="address">
                    Dirección: @Model.MedicoConsultaDNavigation.Establecimiento.DireccionEstablecimiento
                </div>
            </div>
        </div>
    </div>

</body>
